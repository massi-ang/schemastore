                                    "examples": [
                                        {
                                            "policy_1": {
                                                "policyDescription": "My policy",
                                                "operations": [
                                                    "\"*\""
                                                ],
                                                "resources": [
                                                    "\"*\""
                                                ]
                                            }
                                        }
                                    ],
                                    "patternProperties": {
                                        "[.-\\w]+": {
                                            "properties": {
                                                "policyDescription": {
                                                    "type": "string"
                                                },
                                                "operations": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "enum": [
                                                            "*",
                                                            "aws.greengrass#VerifyClientDeviceIdentity",
                                                            "aws.greengrass#GetClientDeviceAuthToken",
